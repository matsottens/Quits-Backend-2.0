{
  "name": "quits-api",
  "version": "1.0.0",
  "description": "Quits API - Serverless deployment",
  "main": "api/index.js",
  "type": "module",
  "scripts": {
    "build": "npm --prefix frontend run build && npm --prefix backend run build",
    "start": "concurrently \"npm --prefix frontend run start\" \"npm --prefix backend run start\"",
    "verify-modules": "node verify-modules.js",
    "predeploy": "npm run verify-modules",
    "prepare-local": "node scripts/prepare-env.js",
    "dev": "npm run prepare-local && concurrently \"vercel dev --listen 3000\" \"npm --prefix frontend run dev\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev"
  },
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "googleapis": "^130.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "typescript": "^5.8.3"
  }
}
